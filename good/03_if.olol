//=^.^= If statement (combined with arithmetic and logical operations)
//=^.^= It's polymorphic (more examples in ..._if_with_lists_and_functions.olol)


if (true || false) then false else true;  //=^.^= False

if false then 22 else 20 + 6;   //=^.^= 26


//=^.^= Nested if
if (2 < 3)
    then (
        if (1 == 3)
            then 1
            else (
                if (3 < 7)
                    then 2    //=^.^= Result: 2
                    else 3
            )
    )
    else 4;

